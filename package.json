{
  "name": "@coleski/datagrid-monorepo",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*",
    "packages/examples/*"
  ],
  "scripts": {
    "dev": "bun run --filter '@coleski/datagrid' dev",
    "build": "bun run --filter '@coleski/datagrid' build",
    "typecheck": "tsc -b",
    "lint": "biome check .",
    "lint:fix": "biome check . --write",
    "format": "biome format . --write",
    "clean": "bun run --filter '*' clean && rm -rf node_modules",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "bun run build && changeset publish"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@changesets/cli": "^2.27.10",
    "typescript": "^5.7.3"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}